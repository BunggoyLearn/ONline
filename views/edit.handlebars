<!-- Edit Event Form -->
<form id="edit-event-form">
    <h3> {{ id }} </h3>
    <div class="form-group">
        <label for="edit-event-title">Event Title</label>
        <textarea type="text" id="edit-event-title" name="title" required>
        {{ title }}    
        </textarea>
    </div>
    <div class="form-group">
        <label for="edit-event-description">Event Description</label>
        <textarea id="edit-event-description" name="description">
        {{ description }}
        </textarea>
    </div>
    <div class="form-group">
        <label for="edit-event-date">Event Date</label>
        <input type="date" id="edit-event-date" name="date" required>
    </div>
    <div class="form-group">
        <label for="edit-event-time">Event Time</label>
        <input type="time" id="edit-event-time" name="time" required>
    </div>
    <button type="submit">Update Event</button>
</form>